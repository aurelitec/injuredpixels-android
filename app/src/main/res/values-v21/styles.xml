<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:colorAccent">@color/color_accent</item>
    </style>

    <!-- Color button style -->
    <style name="ColorButton" parent="@android:style/Widget.Material.Button">
        <item name="android:background">@drawable/color_button</item>
        <item name="android:minHeight">@dimen/color_button_min_height</item>
        <item name="android:minWidth">@dimen/color_button_min_width</item>
        <item name="android:layout_marginBottom">@dimen/color_button_margin_vertical</item>
    </style>

    <!-- Subtle button style -->
    <style name="BorderlessButton" parent="@android:style/Widget.Material.Button.Borderless">
    </style>

    <!-- Color picker dialog activity theme -->
    <style name="ColorPickerTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
    </style>

    <!-- Platform native text appearance -->
    <style name="NativeText" parent="@android:style/TextAppearance.Material">
    </style>

</resources>